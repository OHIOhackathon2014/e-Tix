@model OSUTicketExchange.Web.Models.Game

@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/bundles/datepicker")

@Styles.Render("~/Content/bootstrap-datepicker.css")

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add a Game</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="">
                @Html.TextBoxFor(model => model.Name, new { @class="form-control col-md-4"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="input-append date" >
                <label class="control-label col-md-2">Date</label>
                <input class="form-control col-md-4" data-val="true" data-val-required="*" data-date-format="YYYY/MM/DD" id="dp1" name="Date" size="16" type="text" value="@Model.Date" readonly>
            </div>
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="form-group">
            <div class="input-append date">
                <label class="control-label col-md-2">Start Time</label>
                <input class="form-control col-md-4" data-date-format="YYYY/MM/DD" data-date id="dp2" name="StartTime" size="16" type="text" value="@Model.StartTime" readonly>
            </div>
            @Html.ValidationMessageFor(model => model.StartTime)
        </div>

      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-lg btn-primary " />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@Scripts.Render("~/bundles/jqueryval")


<script>
    $(document).ready(function () {

        $("#dp1").datepicker(
        {
            format: 'yyyy/mm/dd',
            todayHighlight: true
        });
        $("#dp2").datepicker(
       {
           format: 'yyyy/mm/dd',
           todayHighlight: true
       });

    });
</script>